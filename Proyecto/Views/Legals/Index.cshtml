@model IEnumerable<Proyecto.Models.Legal>

@{
    ViewData["Title"] = "Index";
}

<h1>Legal</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Denuncias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antecedentes_Penales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fraudes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Denuncias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Antecedentes_Penales)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fraudes)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdLegal" class="btn btn-secondary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdLegal" class="btn btn-info"> Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdLegal" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
